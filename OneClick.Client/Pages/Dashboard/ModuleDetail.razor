@page "/dashboard/module/{ModuleId:int}"
@layout OneClick.Client.Shared.DashboardLayout
@using OneClick.Client.Services
@using System.Text.Json
@using System.Text.Json.Nodes
@inject ModuleApiClient ModuleService
@inject IJSRuntime JSRuntime
@inject NavigationManager NavManager

<div class="h-full bg-gray-50 flex flex-col">
    <!-- Content Area -->
    <div class="flex-1 overflow-auto p-8">
        @if (module == null)
        {
            <div class="h-full flex flex-col items-center justify-center text-gray-400 gap-4">
                <div class="w-10 h-10 border-4 border-indigo-200 border-t-indigo-600 rounded-full animate-spin"></div>
                <p>로딩 중...</p>
            </div>
        }
        else
        {
            <div class="max-w-4xl mx-auto space-y-6">
                
                <!-- 1. Module Info Card -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8 flex items-start gap-6 relative overflow-hidden">
                    <div class="absolute top-0 right-0 p-8 opacity-5 pointer-events-none">
                        <i class="@module.IconClass text-9xl text-indigo-900 transform rotate-12 translate-x-10 -translate-y-10"></i>
                    </div>

                    <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-indigo-500 to-indigo-600 text-white flex items-center justify-center text-2xl shadow-lg shadow-indigo-200 flex-shrink-0">
                        <i class="@module.IconClass"></i>
                    </div>
                    
                    <div class="flex-1 min-w-0 z-10">
                        <h2 class="text-2xl font-bold text-gray-900 mb-2">@module.Title</h2>
                        <p class="text-gray-600 leading-relaxed max-w-2xl">@module.Description</p>
                    </div>
                </div>

                <!-- 2. Dynamic Form / Action -->
                @if (!module.IsLocked && uiFields != null)
                {
                    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
                         <div class="flex items-center gap-3 mb-8 pb-4 border-b border-gray-100">
                             <div class="w-8 h-8 rounded-full bg-indigo-50 text-indigo-600 flex items-center justify-center">
                                 <i class="fa-solid fa-sliders"></i>
                             </div>
                             <h3 class="text-lg font-bold text-gray-800">설정 입력</h3>
                         </div>

                        <div class="grid grid-cols-1 gap-8">
                            @foreach (var field in uiFields)
                            {
                                if (field == null) continue;
                                var fieldKey = field["key"]?.ToString() ?? "";
                                var label = field["label"]?.ToString() ?? "";
                                var type = field["type"]?.ToString() ?? "text";
                                var placeholder = field["placeholder"]?.ToString() ?? "";
                                var rows = field["rows"]?.GetValue<int>() ?? 3;
                                
                                <div class="group">
                                    <label class="block text-sm font-bold text-gray-700 mb-2 transition-colors group-focus-within:text-indigo-600">
                                        @label <span class="text-red-500">*</span>
                                    </label>
                                    
                                    @if (type == "textarea")
                                    {
                                        <textarea @bind="formData[fieldKey]" 
                                                  rows="@rows"
                                                  placeholder="@placeholder"
                                                  class="w-full bg-gray-50 border border-gray-200 rounded-xl px-4 py-3 text-gray-900 placeholder-gray-400 focus:bg-white focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 transition-all resize-y outline-none"></textarea>
                                    }
                                    else
                                    {
                                        <input type="@type" 
                                               @bind="formData[fieldKey]" 
                                               placeholder="@placeholder"
                                               class="w-full bg-gray-50 border border-gray-200 rounded-xl px-4 py-3 text-gray-900 placeholder-gray-400 focus:bg-white focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 transition-all outline-none" />
                                    }
                                </div>
                            }
                        </div>

                        <!-- Action Buttons -->
                        <div class="mt-10 flex items-center justify-end gap-3 pt-6 border-t border-gray-50">
                            <button @onclick="GoBack" class="px-6 py-3 rounded-xl text-gray-600 font-medium hover:bg-gray-50 transition-colors">
                                취소
                            </button>
                            <button @onclick="RunModule" disabled="@isRunning" 
                                    class="px-8 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-xl shadow-lg shadow-indigo-600/20 active:scale-95 transition-all flex items-center gap-2 disabled:opacity-70 disabled:cursor-not-allowed">
                                @if (isRunning)
                                {
                                    <i class="fa-solid fa-circle-notch fa-spin"></i>
                                    <span>작업 수행 중...</span>
                                }
                                else
                                {
                                    <i class="fa-solid fa-play"></i>
                                    <span>실행하기</span>
                                }
                            </button>
                        </div>
                    </div>

                    <!-- Result Log -->
                    @if (!string.IsNullOrEmpty(executionLog))
                    {
                        <div class="mt-6 animate-fade-in-up">
                            <div class="bg-gray-900 rounded-2xl overflow-hidden shadow-xl border border-gray-800">
                                <div class="bg-gray-800 px-6 py-3 flex items-center justify-between">
                                     <span class="text-xs font-bold text-gray-400 uppercase tracking-wider flex items-center gap-2">
                                         <i class="fa-solid fa-terminal"></i> Terminal Output
                                     </span>
                                     @if (lastRunSuccess)
                                     {
                                         <span class="text-xs font-bold text-green-400 bg-green-400/10 px-2 py-1 rounded">SUCCESS</span>
                                     }
                                     else
                                     {
                                         <span class="text-xs font-bold text-red-400 bg-red-400/10 px-2 py-1 rounded">FAILED</span>
                                     }
                                </div>
                                <div class="p-6 font-mono text-sm text-gray-300 whitespace-pre-wrap leading-relaxed">@executionLog</div>
                            </div>
                        </div>
                    }
                }
                else if (module.IsLocked)
                {
                    <div class="bg-white rounded-2xl shadow-sm border border-red-100 p-10 text-center">
                        <div class="w-16 h-16 bg-red-50 text-red-500 rounded-full flex items-center justify-center mx-auto mb-4 text-2xl">
                             <i class="fa-solid fa-lock"></i>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-2">접근 권한이 없습니다</h3>
                        <p class="text-gray-500 mb-8">이 기능을 사용하려면 플랜 업그레이드가 필요합니다.</p>
                        <a href="/dashboard/subscription" class="inline-flex px-6 py-3 bg-red-500 hover:bg-red-600 text-white font-bold rounded-xl shadow-lg shadow-red-500/20 transition-all">
                            구독 플랜 확인하기
                        </a>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public int ModuleId { get; set; }

    private ModuleDto? module;
    private JsonNode? uiSchemaNode;
    private JsonArray? uiFields;
    private Dictionary<string, string> formData = new();
    
    private bool isRunning = false;
    private string executionLog = "";
    private bool lastRunSuccess = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadModule();
    }

    private async Task LoadModule()
    {
        var allModules = await ModuleService.GetModulesAsync();
        module = allModules.FirstOrDefault(m => m.Id == ModuleId);

        if (module != null && !string.IsNullOrEmpty(module.UiSchema))
        {
            ParseUiSchema(module.UiSchema);
        }
    }

    private void ParseUiSchema(string json)
    {
        try
        {
            uiSchemaNode = JsonNode.Parse(json);
            uiFields = uiSchemaNode?["fields"]?.AsArray();
            
            if (uiFields != null)
            {
                foreach (var field in uiFields)
                {
                    if (field == null) continue;
                    var key = field["key"]?.ToString();
                    if (!string.IsNullOrEmpty(key) && !formData.ContainsKey(key))
                    {
                        formData[key] = "";
                    }
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error parsing UI Schema: {ex.Message}");
        }
    }

    private async Task RunModule()
    {
        if (module == null) return;
        
        isRunning = true;
        executionLog = "";
        StateHasChanged();
        
        // 간단한 딜레이 (UI UX용)
        await Task.Delay(500);

        var parameters = formData; 
        var result = await ModuleService.RunModuleAsync(module.Id, parameters);
        
        isRunning = false;
        executionLog = $"> Executing '{module.Title}'...\n> Target: {module.TargetPath}\n\n{result}";
        lastRunSuccess = !result.StartsWith("오류") && !result.StartsWith("Error");
        
        if (lastRunSuccess)
        {
            // Optional: Show Alert or Toast
        }
    }

    private void GoBack()
    {
        NavManager.NavigateTo("/dashboard/home");
    }
}
