<Window x:Class="OneClick.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:blazor="clr-namespace:Microsoft.AspNetCore.Components.WebView.Wpf;assembly=Microsoft.AspNetCore.Components.WebView.Wpf"
        xmlns:local="clr-namespace:OneClick.Client"
        xmlns:components="clr-namespace:OneClick.Client.Components"
        Title="OneClick" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <blazor:BlazorWebView x:Name="blazorWebView"
                              HostPage="wwwroot/index.html" 
                              Services="{DynamicResource Services}"
                              BlazorWebViewInitializing="BlazorWebView_BlazorWebViewInitializing"
                              UrlLoading="BlazorWebView_UrlLoading">
            <blazor:BlazorWebView.RootComponents>
                <blazor:RootComponent Selector="#app" ComponentType="{x:Type components:Routes}" />
            </blazor:BlazorWebView.RootComponents>
        </blazor:BlazorWebView>
    </Grid>
</Window>
